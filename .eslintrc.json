{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "next",
    "prettier",
    "plugin:@next/next/recommended"
  ],
  "rules": {
    "lineBreak-style": 0,
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ],
    "indent": [
      "error",
      2
    ],
    "no-multi-spaces": [
      "error"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "computed-property-spacing": [
      "error",
      "never"
    ],
    "space-in-parens": [
      "error",
      "never"
    ]
  }
}